<AnchorPane fx:id="mainPane" prefHeight="402.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.oose.fis.lab.project.controllers.AddVideoController">
    <children>
        <ImageView fitHeight="402.0" fitWidth="800.0" pickOnBounds="true">
            <image>
                <Image url="@../images/addVideoBackground.jpg" />
            </image>
        </ImageView>
        <AnchorPane fx:id="videoPane" layoutX="-1.0" layoutY="-2.0" prefHeight="402.0" prefWidth="800.0">
            <children>
                <Button fx:id="addVideoButton" layoutX="619.0" layoutY="311.0" mnemonicParsing="false" onAction="#addVideoHandler" prefHeight="43.0" prefWidth="83.0" text="add" />
                <TextField fx:id="videoCategoryValue" layoutX="545.0" layoutY="97.0" promptText="category" />
                <TextField fx:id="videoTitleValue" layoutX="545.0" layoutY="138.0" promptText="title" />
                <TextArea fx:id="videoDescriptionValue" layoutX="501.0" layoutY="175.0" prefHeight="92.0" prefWidth="201.0" promptText="enter a video description" wrapText="true" />
                <Text fx:id="addVideoErrorText" fill="#e12727" fontSmoothingType="LCD" layoutX="138.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="148.99999582394958" />
